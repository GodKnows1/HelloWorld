<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/abc">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:id="@+id/login_pat"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:id="@+id/login_username_pat"
            android:textColor="@color/text"
            android:layout_below="@id/login_pat"
            android:onClick="login_username_pat"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textColor="@color/text"
            android:id="@+id/login_password_pat"
            android:layout_below="@id/login_username_pat"
            android:onClick="login_password_pat"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_marginTop="40dp"
            android:id="@+id/login_button_pat"
            android:layout_below="@id/login_password_pat"
            android:onClick="login_button_pat"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOT YET REGISTERED?"
            android:textColor="@color/text"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:layout_below="@id/login_button_pat"
            android:onClick="signup_page_pat"
            android:id="@+id/not_yet"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_below="@id/not_yet"
            android:id="@+id/error_message"
            />
    </RelativeLayout>
</RelativeLayout>